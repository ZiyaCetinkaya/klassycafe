@model klassycafe.Models.MENUINDEX
@using klassycafe.Models

<section class="section" id="menu">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4 text-center">
                <div class="section-heading">
                    <h6>Klassy Week</h6>
                    <h2>This Week’s Special Meal Offers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row" id="tabs">
                    <div class="col-lg-12">
                        <div class="heading-tabs">
                            <div class="row">
                                <div class="col-lg-6 offset-lg-3">
                                    <ul>
                                        @foreach (var mc in Model.CATEGORIES)
                                        {
                                            <li><a href='#tabs-@mc.ID'><img src="@mc.ICON" alt="@mc.TITLE">@mc.TITLE</a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <section class='tabs-content'>
                            @foreach (var mc in Model.CATEGORIES)
                            {
                                List<MENUITEM> items = Model.ITEMS.Where(i => i.MENUCATEGORY_ID == mc.ID).ToList();
                                <article id='tabs-@mc.ID'>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="row">
                                                <div class="left-list">
                                                    @for (int i = 0; i < (items.Count / 2); i++)
                                                    {
                                                        <div class="col-lg-12">
                                                            <div class="tab-item">
                                                                <img src="~/Content/images/menuitem/@items[i].IMAGE" alt="@items[i].NAME">
                                                                <h4>@items[i].NAME</h4>
                                                                <p>@items[i].DESCRIPTION</p>
                                                                <div class="price">
                                                                    <h6>$@String.Format("{0:0.00}", items[i].PRICE)</h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="row">
                                                <div class="right-list">
                                                    @for (int i = (items.Count / 2); i < items.Count; i++)
                                                    {
                                                        <div class="col-lg-12">
                                                            <div class="tab-item">
                                                                <img src="~/Content/images/menuitem/@items[i].IMAGE" alt="@items[i].NAME">
                                                                <h4>@items[i].NAME</h4>
                                                                <p>@items[i].DESCRIPTION</p>
                                                                <div class="price">
                                                                    <h6>$@String.Format("{0:0.00}", items[i].PRICE)</h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>