@model klassycafe.Models.RESERVATIONLIST
@{
    ViewBag.Title = "Reservation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row mt-2">
    <div class="col-12">
        <div class="card border-light">
            <div class="card-body">
                <h5>Reservation Details</h5>
                <hr />
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-1">
                                    <label><b>State: </b> @Model.reservationStateName</label>
                                </div>
                                <div class="form-group mb-1">
                                    <label><b>Name: </b> @Model.reservation.NAME</label>
                                </div>
                                <div class="form-group mb-1">
                                    <label><b>Date: </b> @Model.reservation.RESERVATION_DATE</label>
                                </div>
                                <div class="form-group mb-1">
                                    <label><b>Phone: </b> @Model.reservation.PHONE</label>
                                </div>
                                <div class="form-group mb-1">
                                    <label><b>Email: </b> @Model.reservation.EMAIL</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-1">
                                    <label><b>Guest Count: </b> @Model.reservation.GUEST_COUNT</label>
                                </div>
                                <div class="form-group mb-1">
                                    <label><b>Guset Message: </b> @Model.reservation.MESSAGE </label>
                                </div>
                                <div class="form-group mb-1">
                                    <label><b>Comment: </b>@Model.reservation.COMMENT</label>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-12 justify-content-end">
                                <div class="form-group mb-3">
                                    <a href="/edit-reservation/@Model.reservation.ID" class="btn btn-success">EDIT</a>
                                    <a href="/reservations" class="btn btn-danger">CANCEL</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

