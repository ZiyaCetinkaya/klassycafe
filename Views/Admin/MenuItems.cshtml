@model List<klassycafe.Models.MENUITEMLIST>
@{
    ViewBag.Title = "MenuCategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-2">
    <div class="col-12">
        <div class="card border-light">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <h5>Menü Items</h5>
                    </div>
                    <div class="col-6">
                        <a href="/add-menu-item" class="btn btn-sm btn-primary pull-right">New Menu Item</a>
                    </div>
                </div>
                <hr />
                <div class="table-responsive">
                    <table class="table table-sm table-hover" id="example">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>State</th>
                                <th>Show At Menu Slider</th>
                                <th style="text-align: right;">Operations</th>
                            </tr>
                        </thead>
                        <thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.categoryName</td>
                                    <td><img src="~/Content/images/menuitem/@item.item.IMAGE" style="height: 30px" /></td>
                                    <td>@item.item.NAME</td>
                                    <td>@item.stateName</td>
                                    @if (item.item.MENUSLIDER_SHOW == true)
                                    {
                                        <td>SHOW</td>
                                    }
                                    else
                                    {
                                        <td>DON'T SHOW</td>
                                    }
                                <td style="text-align: right;">
                                    <a class="btn btn-primary btn-sm" href="/menu-item/@item.item.ID" title="Details"><i class="fa fa-ellipsis-h"></i></a>
                                    <a class="btn btn-warning btn-sm" href="/edit-menu-item/@item.item.ID" title="Edit"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger btn-sm" href="/remove-menu-item/@item.item.ID" title="Remove"><i class="fa fa-trash"></i></a>
                                </td>
                                </tr>
                            }
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

