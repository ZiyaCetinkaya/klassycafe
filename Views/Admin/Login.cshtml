@model klassycafe.Models.USER
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div id="top">
    <div class="container-fluid">
        @if (ViewBag.Error != null)
        {
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>ERROR!</strong> @ViewBag.Error
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-lg-4">
                <div class="contact-form">
                    @using (Html.BeginForm("LoginForm", "Admin", FormMethod.Post, new { id = "contact" }))
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <h4>Login</h4>
                            </div>
                            <div class="col-12">
                                <fieldset>
                                    @Html.TextBoxFor(modelItem => Model.EMAIL, "", new { placeholder = "Email", type = "text", required = "required" })
                                </fieldset>
                            </div>
                            <div class="col-12">
                                <fieldset>
                                    @Html.TextBoxFor(modelItem => Model.PASSWORD, "", new { placeholder = "Password", type = "password", required = "required" })
                                </fieldset>
                            </div>
                            <div class="col-12">
                                <fieldset>
                                    <button class="main-button-icon" type="submit">Login</button>
                                </fieldset>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-8">
                <div class="left-content">
                    <div class="inner-content">
                        <h4>KlassyCafe</h4>
                        <h6>THE BEST EXPERIENCE</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>